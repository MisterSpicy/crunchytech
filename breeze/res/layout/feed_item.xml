<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:paddingLeft="15dp"
   android:paddingRight="15dp"
   android:descendantFocusability="beforeDescendants">

   <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:paddingLeft="15dp"
      android:paddingTop="15dp"
      android:paddingBottom="15dp"
      android:paddingRight="15dp"
      android:background="@drawable/layer_card_background"
      android:descendantFocusability="afterDescendants">
	
	<RelativeLayout
	    android:id="@+id/feed_picture_layout"
	    android:layout_width="100dp"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/feed_picture"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/grey"
	        android:scaleType="centerCrop"
	        android:clickable="true"
	        android:onClick="onFeedProfileClick" />
	</RelativeLayout>
        
    <RelativeLayout
    	android:id="@+id/feed_text_layout"
    	android:layout_width="fill_parent"
    	android:layout_height="80dp"
    	android:orientation="vertical">
    
       <TextView
           android:id="@+id/feed_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:clickable="true"
           android:onClick="onFeedProfileClick"
           android:layout_gravity="bottom"
           android:textColor="@android:color/black" />
       <TextView
           android:id="@+id/feed_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/feed_name"
           android:clickable="true"
           android:onClick="onFeedProfileClick"
           android:layout_gravity="bottom"
           android:textColor="@android:color/black" />
    </RelativeLayout>
	        
	<RelativeLayout
	    android:id="@+id/feed_actions_layout"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:orientation="vertical">
	    
	    <ImageView
            android:id="@+id/feed_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onFeedHideClick"
            android:scaleType="centerCrop" />
        
        <ImageView
            android:id="@+id/feed_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/feed_hide"
            android:clickable="true"
            android:onClick="onFeedConnectClick"
            android:scaleType="centerCrop" />
    </RelativeLayout>
    </LinearLayout>
</FrameLayout>